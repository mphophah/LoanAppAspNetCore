@model IEnumerable<AMS.Models.CustomerVM>

@{
  ViewData["Title"] = "Index";
}

<div class="card">
  <div class="card-header">
    <div class="wrapper-inner-card d-flex justify-content-between align-items-center">
            <h3 class="text-uppercase">Customer List</h3>
      <button type="button" class="btn back btn-success"><a asp-action="Create"> <i class="fa fa-plus"
            aria-hidden="true"></i> Create New</a></button>
    </div>
  </div>

  <!-- /.card-header -->
  <div class="card-body">
    <table id="example1" class="table table-bordered table-striped">
      <thead>
        <tr>
          <th> First Name</th>
          <th> Last Name</th>
          <th> ID Number</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>

        @foreach (var item in Model)
        {
          <tr>
            <td>
              @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.IDNumber)
            </td>
            <td>
              <div class="row">
                <div class="col-2">
                  <a asp-action="Edit" class="btn-edit" asp-route-id="@item.Id">
                    <i class="fas fa-pencil-alt" aria-hidden="true"></i>
                  </a>
                </div>
                <div class="col-2">
                  <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                    <button type="submit" class="btn-dlt"
                    onclick="return confirm('Are you sure you want to delete this record?')">
                      <i class="fas fa-trash" aria-hidden="true"></i>
                    </button>
                  </form>
                </div>
              </div>

            </td>
          </tr>
        }


      </tbody>
    </table>
    <!-- /.card-body -->



  </div>
</div>


